<Window x:Class="MusicStoreDB_App.DataGridView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicStoreDB_App"
        mc:Ignorable="d"
        Title="Music Store Database" Height="590" Width="1238" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="LightGray" Icon="../Resources/music.ico" WindowStyle="ThreeDBorderWindow">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="LightGray" CornerRadius="8" Margin="10,10,7.8,170.8" Background="White" Grid.RowSpan="2" Grid.Column ="1">
            <StackPanel Height="372">
                <ToolBar Height="30" VerticalAlignment="Top" Margin="0.2,8.5,-21.466,0" Background="White" ToolBarTray.IsLocked="True" ClipToBounds="True">
                    <ComboBox x:FieldModifier="public" Name="comboBoxTableChoose" SelectedIndex="0" Width="100" Margin="5,0,5,0" DropDownClosed="ComboBoxTableChoose_DropDownClosed">
                        <TextBlock Text="Песни" Style="{StaticResource menuTextBlockStyle}"/>
                        <TextBlock Text="Альбомы" Style="{StaticResource menuTextBlockStyle}"/>
                        <TextBlock Text="Продажи" Style="{StaticResource menuTextBlockStyle}"/>
                    </ComboBox>
                    <Button Content="Выход" Margin="5,2,0,1.6" Click="Exit_Click" Width="49" Style="{StaticResource exitStyle}"/>
                </ToolBar>
                <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" ColumnWidth="*" SelectedItem="{Binding SelectedItem}" CanUserReorderColumns="False" EnableRowVirtualization="false" EnableColumnVirtualization="false"  CanUserAddRows="False" Background="#FFA5A5A5" Height="224" Margin="10,20,10,0" VerticalAlignment="Top" BorderBrush="#FFA5A5A5">
                    <DataGrid.ContextMenu>
                        <ContextMenu StaysOpen="True" Background="WhiteSmoke">
                            <ContextMenu.BitmapEffect>
                                <BitmapEffectGroup/>
                            </ContextMenu.BitmapEffect>
                            <MenuItem Header="Удалить" x:Name="RemoveContextMenu" Click="Delete_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
                <Grid Height="57.2" Margin="10,15,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" Style="{StaticResource EditStyle}" Content="{Binding ButtonAddContent}" Command="{Binding AddEvent}" Width="Auto" Margin="5,5,5,5" Height="Auto"/>
                    <Button Grid.Column="0" Style="{StaticResource AddStyle}" Content="Обновить" Command="{Binding RefreshEvent}" Width="Auto" Margin="5,5,5,5"/>
                    <Button Grid.Column="2" Style="{StaticResource DeleteStyle}" Content="Сохранить" Command="{Binding SaveEvent}" Width="Auto" Margin="5,5,5,5"/>
                    <Button Grid.Column="3" Style="{StaticResource SafeStyle}" Content="Сохранить в PDF" Click="Export_Songs_To_PDF_ClickAsync"  Width="Auto" Margin="5,5,5,5"/>
                </Grid>
            </StackPanel>
        </Border>
        <Border Name="addBorder" Visibility="Visible" BorderThickness="1" BorderBrush="LightGray" CornerRadius="8" Margin="8.2,10,6,170.8" Background="White" Grid.Column="0" Grid.RowSpan="2">
            <StackPanel x:Name="addStackPanel" Grid.Column="1"/>
        </Border>
    </Grid>
</Window>
